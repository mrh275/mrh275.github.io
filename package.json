{
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:vite": "vite",
    "dev:app": "tailwindcss -i ./css/app.css -o ./build/app.css --watch",
    "build": "npm-run-all --parallel build:*",
    "build:app": "tailwindcss -i ./css/app.css -o ./dist/css/app.css --minifiy"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.23",
    "vite": "^2.9.1"
  }
}
